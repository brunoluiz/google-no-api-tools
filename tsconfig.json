{
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2020",
    "sourceMap": true,
    "declaration": true,
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": [
      "dom",
      "es2020"
    ]
  }
}
